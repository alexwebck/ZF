<?php 
$title = 'My albums';
$this->headTitle($title);
?>
<h1><?php echo $this->escape($title); ?></h1>
<p><a href="<?php echo $this->url('default', array('controller'=>'album', 
        'action'=>'add'));?>">Add new album</a></p>
<table class="table">
<tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Photo</th>
