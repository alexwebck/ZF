<tr>    
    <td><?php echo $this->escape($album->title);?></td>
    <td><?php echo $this->escape($album->artist);?></td>
    <td><img src="<?php echo $this->escape($album->photo) ? $this->basePath() . '/media/images/' . $this->escape($album->photo) :
                                                       $this->basePath() . '/media/images/no-image.gif'?>"/>
    </td>
    <td>
        <a href="<?php echo $this->url('default',
            array('controller'=>'album','action'=>'edit')) 
            . '?id=' . $album->id ;?>">Edit</a>
        <a href="<?php echo $this->url('default',
            array('controller'=>'album','action'=>'delete')) 
            . '?id=' . $album->id ;?>">Delete</a>
